					<label><input class="uk-checkbox" name="permissions_modules[]" value="c" type="checkbox"  {% if in_array("c",parametres.permissions_modules) %}checked{% endif %} >{{ languages.add }}</label>

					<label><input class="uk-checkbox" name="permissions_modules[]" type="checkbox" value="u"  {% if in_array("u",parametres.permissions_modules) %}checked{% endif %} >{{ languages.edit }}</label>

					<label><input class="uk-checkbox" name="permissions_modules[]"  type="checkbox" value="d" {% if in_array("d",parametres.permissions_modules) %}checked{% endif %} >{{ languages.delete }}</label>
					
				</div>
