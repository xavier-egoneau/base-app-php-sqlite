				{% include 'switch.twig' with {'datas': { 
					'id': 'permissions_parametres',
					'slug': 'permissions_parametres',
					'value': parametres.permissions_parametres,
					'ref': '',
					'local':local,
					'user':user.type,
					'options':'',
					'option1':languages.no,
					'option2':languages.oui
				} }  only %}
				{% include 'blockquote.twig' with {'string': languages.advencedparameter   }  only %}
