				</script>
			{% endif  %}
			
			
				
			
			
			
				
				<div class="clear"></div>
				<br><br>
				<h1 class="uk-h3">{{ languages.public }}</h1>
				{% include 'switch.twig' with {'datas': { 
					'id': 'production',
					'slug': 'production',
					'value': parametres.production,
					'ref': '',
					'local':local,
					'user':user.type,
					'options':'',
					'option1': languages.brouillon,
					'option2': languages.publie
				} }  only %}
			
				
				
				
				
				
					

					
					
				
				
					{# ------------------ !CONTENT ---------------------- #}
					
