				{# ------------------ end section ---------------------- #}	

				<h1 class="uk-h3">{{ languages.permissionfolder }} - Admin</h1>
				<div class="uk-margin uk-grid-small uk-child-width-auto uk-grid">
				 
				        <label><input class="uk-checkbox" name="permissions_folders[]" value="c" type="checkbox"  {% if in_array("c",parametres.permissions_folders) %}checked{% endif %} >{{ languages.add }}</label>

						<label><input class="uk-checkbox" name="permissions_folders[]" type="checkbox" value="u"  {% if  in_array("u",parametres.permissions_folders) %}checked{% endif %} >{{ languages.edit }}</label>

						<label><input class="uk-checkbox" name="permissions_folders[]"  type="checkbox" value="d" {% if in_array("d",parametres.permissions_folders) %}checked{% endif %} >{{ languages.delete }}</label>
				    
				</div>
				<hr class="uk-divider-small">
				

				<h1 class="uk-h3">{{ languages.permissionmodules }} - Admin</h1>
