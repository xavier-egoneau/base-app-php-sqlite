					'value': parametres.rs,
					'ref': '',
					'local':local,
					'user':user.type,
					'options':''
				} }  only %}
				
				<hr class="uk-divider-small">
				{# ------------------ end section ---------------------- #}
				
			{% if 
				user.type=="1" or 
				user.type=="2" and parametres.permissions_parametres=="true" 
			 %}
			 	
			 	
			 	

				<h1 class="uk-h3">Analytics</h1>
			 	
			 	{% include 'texte.twig' with {'datas': { 
			 		'id': 'analytics',
			 		'slug': 'analytics',
			 		'value': parametres.analytics,
			 		'ref': '',
			 		'local':local,
			 		'user':user.type,
			 		'options':''
			 	} }  only %}
			 	
			 	
			 	{% include 'blockquote.twig' with {'string': languages.analyticstxt   }  only %}
				<hr class="uk-divider-small">
				
				{# ------------------ end section ---------------------- #}

			 	
				
				<h1 class="uk-h3">{{ languages.shortcuticon }} </h1>

				{% include 'image2.twig' with {'datas': { 
					'id': 'shortcut_icon',
					'slug': 'shortcut_icon',
