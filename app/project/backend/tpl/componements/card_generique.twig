{#
<li class="collection-item list-group-item {% if statut=='false' or card_type=='articles' and article.statut!='true' %} unpublished {% endif %}" data-id="{{ id }}" data-ref="{{ cat }}" ordre="{{ ordre }}" id="block{{ id }}"  >
