{% if is_array(datas.options) %}
	{% set options = datas.options|raw %}
{% else %}
	{% set options = datas.options|raw|split(',') %}
{% endif %}
<div class="clear"></div>



<div class="uk-margin">
            <select class="uk-select" id="{{ datas.id }}" name="{{ datas.slug }}">
     			<option value="" {% if datas.value == "" %} selected {% endif %} >Non d√©fini</option>  
			     {% for option in options %}
			      
			      <option value="{{ option }}" {% if datas.value == option %} selected {% endif %} >{{ option }}</option>
			        
			     {% endfor %}
            </select>
        </div>